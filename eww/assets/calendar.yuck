;; Calendar Widgets ;;
(defwidget mycalendar []
	(box :class "calendar-box" 
		 :orientation "h"
	(box :class "calendar-inner-box"
	(calendar :class "calendar" 
			  :day calendar_day 
			  :month calendar_month 
			  :year calendar_year))))
(defpoll calendar_day :interval "24h"
    "date '+%d'")
(defpoll calendar_month :interval "24h"
    "scripts/calendar")
(defpoll calendar_year :interval "24h"
    "date '+%Y'")